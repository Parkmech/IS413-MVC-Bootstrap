@{
    ViewBag.Title = "Add Restaurant";

}

@model BestRestaurants.Models.AddRestaurant
<h1>Add A Restaurant to the List</h1>

<br />

<!--This form allows users to add movies to the database-->
<form class="form-control" asp-action="AddRestaurant" method="post">

    <div>

        <!--These razor code lines will display the error message associated with their field if they aren't entered correctly-->
        @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
        <br />

        <label asp-for="UserName">Enter Your Name Here: </label>
        <input class="form-text" asp-for="UserName" />

    </div>

    <!--Name of the Restaurant-->
    <div>

        @Html.ValidationMessageFor(model => model.RestaurantName, "", new { @class = "text-danger" })
        <br />

        <label asp-for="RestaurantName">Restaurant Name: </label>
        <input class="form-text" asp-for="RestaurantName" />
    </div>

    <!--Favorite Dish-->
    <div>

        @Html.ValidationMessageFor(model => model.FaveDish, "", new { @class = "text-danger" })
        <br />

        <label asp-for="FaveDish">Favorite Dish: </label>
        <input class="form-text" asp-for="FaveDish" />

    </div>

    <!--Phone Number-->
    <div>

        @Html.ValidationMessageFor(model => model.PhoneNum, "", new { @class = "text-danger" })
        <br />

        <label asp-for="PhoneNum">Enter the Restaurant Phone Number Here (Optional): </label>
        <input class="form-text" asp-for="PhoneNum" />
    </div>

    <br />

    <!--This button submits the form-->
    <button class="btn-primary" type="submit">Submit Your Entry</button>

</form>